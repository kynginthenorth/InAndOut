
@{
    ViewData["Title"] = "Expense | Home";
}
@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Create new item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Expense Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Expense Type
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="25%">@expense.ExpenseName</td>
                        <td width="25%">@expense.Amount</td>
                        <td width="25%">@expense.ExpenseType.Name</td>
                        <td width="25%">
                            <div class="w-100 button-group" role="group">
                                <a class="btn btn-primary mx-1" asp-controller="Expense" asp-route-Id="@expense.Id" asp-action="Update">Update</a>
                                <a class="btn btn-danger mx-1" asp-controller="Expense" asp-route-Id="@expense.Id" asp-action="Delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet.</p>
    }
</div>
